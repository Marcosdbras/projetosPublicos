    frmmodulo.qrcondpgto_parcela.SQL.Add('select * from c000016 where codcondpgto = '''+frmmodulo.qrcondpgto.fieldbyname('codigo').asstring+''' order by numero');
    frmmodulo.qrcondpgto_parcela.open;
  except
  end;
end;

